#main-wrapper.site
  #container
    .card
      %h1
        = @publication.title
        - if !@publication.status.nil? && @publication.status != ''
          == (#{@publication.status})

      %div{:class => "info-square danger"}
        %i{:class => "fa fa-info-circle"}
        Are you sure you want to delete this publication? This action will only delete your copy of this publication, but cannot be undone.
      %p
        = button_to "Delete", @publication, :method => :delete, :class => 'btn bg-sdw '
        = link_to "Cancel", @publication, :class => 'btn revert bg-sdw card-size'

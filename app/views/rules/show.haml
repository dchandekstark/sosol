.card.no-bottom-margin
  %p
    %b
      "Floor (#{@rule.decree.tally_method}):"
    = @rule.floor

  %p
    %b
      Number of days after which to apply:
    = @rule.expire_days

%ul{:class => 'menu'}
  %li
    = link_to 'Edit', edit_rule_path(@rule) , :class => 'btn bg-sdw'
  %li
    = link_to 'Back', rules_path, :class => 'btn bg-sdw'

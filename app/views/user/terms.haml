#termsofservice
  - form_for(@current_user, :url => { :action => "update_terms", :id => @current_user.id }) do |f|
    #terms_box
      = render :partial => 'terms_text'
      %span{:class => "hint"} Please click the checkbox to indicate your acceptance of these terms:
      %input{ :type => "checkbox", :id => "accpet", :name => "accept", :required => "required" }
      = f.submit "Accept Terms"


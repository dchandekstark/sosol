#main-wrapper
  #container
    %header
      %h1
        History for
        %em
          = @identifier.title
      %h2
        from publication
        = @identifier.publication.title
    = render :partial => "common/flash_all_perseids"
    .card
      %h3
        = render :partial => "identifiers/pn_link", :locals => {:identifier => @identifier}
      #edit
        %ul
          - for commit in @identifier.get_commits
            - message = commit[:message].split("\n").first || '(no message)'
            %li= link_to html_escape(message), url_for(:action => 'show_commit', :commit_id => commit[:id], :id => @identifier.id, :publication_id => @identifier.publication.id)

%h1
  New comment
= form_for(@comment) do |f|
  = f.error_messages
  %p
    = f.label :comment
    %br
    = f.text_field :comment
  %p
    = f.label :user_id
    %br
    = f.text_field :user_id
  %p
    = f.label :publication_id
    %br
    = f.text_field :publication_id
  %p
    = f.label :identifier_id
    %br
    = f.text_field :identifier_id
  %p
    = f.label :git_hash
    %br
    = f.text_field :git_hash
  %p
    = f.label :reason
    %br
    = f.text_field :reason
  %p
    = f.submit "Create"
= link_to 'Back', comments_path
